<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-2">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">Add Participating Dojo</p>
        </header>
        <div class="card-content">
          <nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
            <ul>
              <li><%= link_to @taikai.shortname, edit_taikai_path(@taikai) %></li>
              <li class=is-active><%= link_to "New",
                              new_taikai_participating_dojo_path(@taikai),
                              "aria-current": "page" %></li>            </ul>
          </nav>
          <%= render "form", taikai: @taikai, participating_dojo: @participating_dojo %>
        </div>
      </div>
    </div>
  </div>
</div>
