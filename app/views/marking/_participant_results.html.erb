<td class="has-text-left"><%= participant.display_name %></td>
<td class="has-text-centered">
  <%= render "choice", taikai: @taikai, participant: participant %>
</td>
<% participant.results.group_by(&:round).each_pair do |round_index, results| %>
  <td>
    <%= render "round_results", participant: participant, round_index: round_index, results: results %>
  </td>
<% end %>
<td class="has-text-centered has-text-weight-semibold"><%= render "individual_total", participant: participant %></td>