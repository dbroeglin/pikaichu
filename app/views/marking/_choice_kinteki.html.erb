<%= button_to update_marking_path(taikai, participant, status: 'hit', match_id: match&.id),
              method: :post,
              class: "button is-small",
              title: t('.mark_hit') do %>
  <span class="icon is-small">
    <i class="far fa-circle"></i>
  </span>
<% end %>
<%= button_to update_marking_path(taikai, participant, status: 'miss', match_id: match&.id),
              method: :post,
              class: "button is-small ml-1",
              title: t('.mark_missed') do %>
  <span class="icon is-small">
    <i class="fas fa-times"></i>
  </span>
<% end %>
<%= button_to update_marking_path(taikai, participant, status: 'unknown', match_id: match&.id),
              method: :post,
              class: "button is-small ml-1",
              title: t('.mark_unknown') do %>
  <span class="icon is-small">
    <i class="fas fa-question"></i>
  </span>
<% end %>