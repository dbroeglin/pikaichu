      <%= link_to rotate_marking_path(@taikai, participant, result, status: result.status),
                  class: "button is-small is-text #{result.final ? "is-primary" : ""}",
                  data: { turbo_method: 'patch' },
                  title: Result.human_enum_value(:status, result.status) do %>
        <span class="icon is-small" title="<%= Result.human_enum_value(:status, result.status) %>">
          <%= icon_from(result) %>
        </span>
      <% end %>
