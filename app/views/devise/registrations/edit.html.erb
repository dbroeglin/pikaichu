<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">Update your account</p>
        </header>
        <div class="card-content">
          <%= bulma_form_for resource, as: resource_name, url: registration_path(resource_name), html: { "data-turbo":  false, method: :put } do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.input :email, autofocus: true, autocomplete: :email %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password, autocomplete: "new-password",
                        placeholder: "Leave blank if you don't want to change it",
                        help: (@minimum_password_length ? "#{@minimum_password_length} characters minimum)" : nil) %>

            <%= f.input :password_confirmation, autocomplete: "new-password" %>

            <%= f.input :current_password, autocomplete: "current-password",
                        help: "(we need your current password to confirm your changes)" %>

            <%= f.button "Update", class: "button has-background-light" %>
          <% end %>
        </div>
        <footer class="card-content">
          <%= render "devise/shared/links" %>
        </footer>
      </div>
    </div>
    <div class="column is-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">Cancel my account</p>
        </header>
        <div class="card-content">
          <%= bulma_form_for resource, as: resource_name, url: registration_path(resource_name), html: { "data-turbo":  false, method: :delete }, data: { confirm: "Are you sure?" } do |f| %>
            <p class="subtitle">Unhappy? </p>
            <%= f.button "Cancel my account", class: "button has-background-light" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
