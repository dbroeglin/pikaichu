<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">Sign up</p>
        </header>
        <div class="card-content">
          <%= bulma_form_for resource, as: resource_name, url: registration_path(resource_name), html: { "data-turbo":  false } do |f| %>

            <%= f.input :email, autofocus: true, autocomplete: :email %>
            <%= f.input :password, autocomplete: "new-password",
                        help: (@minimum_password_length ? "#{@minimum_password_length} characters minimum)" : nil) %>

            <%= f.button "Sign up", class: "button has-background-light" %>
          <% end %>
        </div>
        <footer class="card-content">
          <%= render "devise/shared/links" %>
        </footer>
      </div>
    </div>
  </div>
</div>

