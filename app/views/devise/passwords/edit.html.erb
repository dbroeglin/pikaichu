<div class="container">
  <div class="columns">
    <div class="column is-one-third is-offset-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= t('.change_your_password') %></p>
        </header>
        <div class="card-content">
          <%= bulma_form_for resource, as: resource_name,
                url: password_path(resource_name),
                html: { "data-turbo":  false, method: :put } do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.input :password, autofocus: true, autocomplete: "new-password",
                        help: t('devise.shared.minimum_password_length', count: @minimum_password_length) %>

            <%= f.input :password_confirmation, autocomplete: "new-password" %>

            <%= f.button t('.change_my_password'), class: "button has-background-light" %>
          <% end %>
        </div>
        <footer class="card-content">
          <%= render "devise/shared/links" %>
        </footer>
      </div>
    </div>
  </div>
</div>