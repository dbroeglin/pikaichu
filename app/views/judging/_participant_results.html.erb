            <td class="has-text-left"><%= participant.display_name %></td>
            <td>
              <div class="columns is-mobile is-centered is-gapless">
                <div class="column is-third">
                  <%= link_to update_judging_path(@taikai, participant, status: 'hit'),
                              class: "button is-small",
                              data: { turbo_method: 'post' },
                              title: "Hit" do %>
                    <span class="icon is-small">
                      <i class="far fa-circle"></i>
                    </span>
                  <% end %>
                </div>
                <div class="column is-third">
                  <%= link_to update_judging_path(@taikai, participant, status: 'miss'),
                              class: "button is-small ml-1",
                              data: { turbo_method: 'post' },
                              title: "Miss" do %>
                    <span class="icon is-small">
                      <i class="fas fa-xmark"></i>
                    </span>
                  <% end %>
                </div>
                <div class="column is-third ">
                  <%= link_to update_judging_path(@taikai, participant, status: 'unknown'),
                              class: "button is-small ml-1",
                              data: { turbo_method: 'post' },
                              title: "Unknown" do %>
                    <span class="icon is-small">
                      <i class="fas fa-question"></i>
                    </span>
                  <% end %>
                </div>
              </div>
            </td>
            <% participant.results.group_by(&:round).each_pair do |round_index, results| %>
              <td>
                <%= render "round_results", participant: participant, round_index: round_index, results: results %>
              </td>
            <% end %>
            <th><%= render "total", participant: participant %></th>
