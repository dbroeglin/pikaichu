<%= bulma_form_with model: taikai do |f| %>
  <%= f.errors %>

  <%= f.input :shortname %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 5 }, as: :text %>

  <%= f.input :start_date, html5: true %>
  <%= f.input :end_date, html5: true %>

  <div class="columns">
    <div class="column one-half">
      <%= f.input :scoring %>
    </div>
    <div class="column one-half">
      <%= f.input :form %>
    </div>
  </div>

  <div class="columns">
    <div class="column one-half">
      <%= f.input :total_num_arrows %>
    </div>
    <div class="column one-half">
      <%= f.input :num_targets %>
    </div>
  </div>

  <div class="columns">
    <div class="column one-half">
      <%= f.input :tachi_size %>
    </div>
    <div class="column one-half">
      <%= f.input :category, as: :select, collection: Taikai::CATEGORY_VALUES, include_blank: true %>
    </div>
  </div>

  <%= f.input :distributed %>

  <%= f.button t('save'), class: "button has-background-light mr-3", disabled: taikai.id && !policy(taikai).update? %>
  <%= link_to t('cancel'), taikai.persisted? ?  taikai_path(taikai) : taikais_path, class: "button" %>
<% end %>