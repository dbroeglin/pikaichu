<%= bulma_form_with model: taikai do |f| %>
  <% if taikai.errors.any? %>
    <h2><%= pluralize(taikai.errors.count, "error") %> prohibited this dojo from being saved:</h2>
  <% end %>

  <%= f.input :shortname %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 5 }, as: :text %>
  <%= f.input :start_date, html5: true %>
  <%= f.input :end_date, html5: true %>
  <%= f.input :distributed %>

  <%= f.button "Save", class: "button has-background-light mr-3" %>
  <%= link_to "Cancel", root_path, class: "button is-outlined" %>
<% end %>