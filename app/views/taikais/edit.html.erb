<div class="container">
  <nav class="breadcrumb has-succeeds-separator" aria-label="breadcrumbs">
    <ul>
      <li class="is-active"><%= link_to @taikai.shortname, edit_taikai_path(@taikai),
                                        "aria-current": "page" %></li>
    </ul>
  </nav>
  <div class="columns">
    <div class="column is-one-third is-offset-2">
      <div class="card">
        <div class="card-content">
          <p class="title">Edit Taikai</p>
          <%= render "form", taikai: @taikai %>
        </div>
      </div>
    </div>
    <div class="column is-one-third">
      <div class="card">
        <div class="card-content">
          <p class="subtitle">Participating Dojos</p>
          <%= render "participating_dojos/list", taikai: @taikai %>
        </div>
      </div>
    </div>
  </div>
</div>
