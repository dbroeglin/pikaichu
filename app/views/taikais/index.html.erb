<div class="container">
  <div class="columns">
    <div class="column is-three-fifths is-offset-one-fifth">
      <h1 class="title">Taikais</h1>

      <table class="table is-fullwidth">
        <thead>
          <tr class="has-text-centered">
            <th></th>
            <th>Code</th>
            <th>Name</th>
            <th>Dates</th>
            <th class="has-text-right">
              <%= link_to new_taikai_path, class: "button is-small has-background-light" do %>
                <span class="icon is-small" title="New Taikai">
                  <i class="fas fa-plus"></i>
                </span>
                <span>New</span>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @taikais.each do |taikai| %>
          <tr>
            <td>
              <% if taikai.distributed %>
                <span class="icon is-small" title="Distributed taikai">
                  <i class="fas fa-globe"></i>
                </span><% end %>&nbsp;<% if !taikai.individual %><span class="icon is-small" title="Team taikai">
                  <i class="fas fa-users"></i>
                </span>
              <% end %>
            </td>
            <td><%= link_to taikai.shortname, taikai_path(taikai) %></td>
            <td><%= taikai.name %></td>
            <td><%= l taikai.start_date, format: :shorter %> - <%= l taikai.end_date, format: :shorter %></td>
            <td class="has-text-right">
              <%= render "icons", taikai: taikai, size: "is-small" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>