<%= link_to edit_taikai_path(taikai),
      class: "button #{size} has-background-light",
      title: t('edit') do %>
  <span class="icon <%= size %>">
    <i class="fas fa-pen"></i>
  </span>
<% end if policy(taikai).edit? %>

<%= link_to taikai,
      class: "button #{size} has-background-light",
      data: { turbo_method: 'delete', turbo_confirm: t('confirm_html') },
      title: t('delete') do %>
  <span class="icon <%= size %>">
    <i class="far fa-trash-can"></i>
  </span>
<% end if policy(taikai).destroy? %>

<%= link_to draw_taikai_path(taikai),
            class: "button #{size} has-background-light ml-3",
            title: t('taikais.draw') do %>
  <span class="icon <%= size %>">
    <i class="fas fa-shuffle"></i>
  </span>
<% end if policy(taikai).draw? %>

<%= link_to show_marking_path(taikai),
            class: "button #{size} has-background-light ml-3",
            title: t('taikais.marking_sheet') do %>
  <span class="icon <%= size %>">
    <i class="far fa-circle-dot"></i>
  </span>
<% end %>

<%= link_to show_taikai_leaderboard_path(taikai),
            class: "button #{size} has-background-light",
            title: t('taikais.leaderboard') do %>
  <span class="icon <%= size %>">
    <i class="fas fa-medal"></i>
  </span>
<% end %>

<%= link_to taikai_export_path(taikai),
            class: "button #{size} has-background-light",
            title: t('taikais.export') do %>
  <span class="icon <%= size %>">
    <i class="fas fa-file-excel"></i>
  </span>
<% end %>
