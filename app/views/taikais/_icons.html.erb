<%= link_to edit_taikai_path(taikai), class: "button #{size} has-background-light", title: "Edit" do %>
  <span class="icon <%= size %>">
    <i class="fas fa-pen"></i>
  </span>
<% end if policy(taikai).edit? %>

<%= link_to taikai, method: :delete,
            class: "button #{size} has-background-light",
            data: { confirm: "Are you sure?" },
            title: "Delete" do %>
  <span class="icon <%= size %>">
    <i class="far fa-trash-can"></i>
  </span>
<% end if policy(taikai).destroy? %>

<%= link_to show_judging_path(taikai),
            class: "button #{size} has-background-light ml-3",
            title: "Judging" do %>
  <span class="icon <%= size %>">
    <i class="far fa-circle-dot"></i>
  </span>
<% end %>

<%= link_to show_leaderboard_path(taikai),
            class: "button #{size} has-background-light",
            title: "Leader board" do %>
  <span class="icon <%= size %>">
    <i class="fas fa-medal"></i>
  </span>
<% end %>

<%= link_to taikai_export_path(taikai),
            class: "button #{size} has-background-light",
            title: "Export to Excel" do %>
  <span class="icon <%= size %>">
    <i class="fas fa-file-excel"></i>
  </span>
<% end %>
