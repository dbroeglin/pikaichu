<div class="columns is-centered">
  <div class="column is-5-tablet is-4-desktop is-3-widescreen">
    <div class="box">
      <h1 class="title has-text-centered"><%= t("sessions.new.title") %></h1>

      <%= form_with url: session_path, class: "mt-5" do |form| %>
        <div class="field">
          <%= form.label :email_address, t("sessions.new.email_label"), class: "label" %>
          <div class="control has-icons-left">
            <%= form.email_field :email_address, 
                                autofocus: true, 
                                autocomplete: "email",
                                required: true,
                                class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= form.label :password, t("sessions.new.password_label"), class: "label" %>
          <div class="control has-icons-left">
            <%= form.password_field :password, 
                                    autocomplete: "current-password",
                                    required: true,
                                    class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= form.submit t("sessions.new.submit"), class: "button is-primary is-fullwidth" %>
          </div>
        </div>

        <div class="has-text-centered mt-4">
          <%= link_to t("sessions.new.forgot_password"), new_password_path, class: "is-size-7" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
